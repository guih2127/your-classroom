@model YourClassroom.Models.RegisterViewModel
@{
    ViewBag.Title = "CADASTRO";
}

<div class="col-md-12">
    <h2>@ViewBag.Title</h2>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Crie uma nova conta.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group estilo-form">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label estilo-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control estilo-input" })
            </div>
        </div>
        <div class="form-group estilo-form">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label estilo-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control estilo-input", @type = "email" })
            </div>
        </div>
        <div class="form-group estilo-form">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label estilo-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control estilo-input" })
            </div>
        </div>
        <div class="form-group estilo-form">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label estilo-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control estilo-input" })
            </div>
        </div>
        <div class="form-group estilo-form">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label estilo-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control estilo-input", @type = "tel" })
            </div>
        </div>
        <div class="form-group estilo-form">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label estilo-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control estilo-input" })
            </div>
        </div>
        <div class="form-group estilo-form">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label estilo-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control estilo-input" })
            </div>
        </div>
        <div class="form-group estilo-form">
            @Html.Label("Tipo de Perfil", new { @class = "col-md-2 control-label estilo-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Role, new SelectList(ViewBag.Roles, "Name", "Name"), new { @class = "estilo-select" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="botao-basico" value="Cadastrar" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval"),
    @Scripts.Render("~/bundles/mask")

    <script>
        $(document).ready(function () {
            $("#PhoneNumber").mask("(00) 00000-0000");
        })
    </script>
}