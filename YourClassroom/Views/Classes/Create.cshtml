@model YourClassroom.Models.Classes

@{
    ViewBag.Title = "Criar Classe";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Crie uma nova clase de aula</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group estilo-form">
            @Html.LabelFor(model => model.Materia, htmlAttributes: new { @class = "control-label col-md-2 estilo-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Materia, new { htmlAttributes = new { @class = "form-control estilo-input" } })
                @Html.ValidationMessageFor(model => model.Materia, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group estilo-form">
            @Html.Label("Curso", htmlAttributes: new { @class = "control-label col-md-2 estilo-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => Model.Curso_Id, new SelectList(ViewBag.Cursos, "Id", "Nome"), htmlAttributes: new { @class = "form-control estilo-input", id = "Curso" })
                @Html.ValidationMessageFor(model => model.Curso_Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group estilo-form">
            @Html.LabelFor(model => model.Periodo, htmlAttributes: new { @class = "control-label col-md-2 estilo-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Periodo, new { htmlAttributes = new { @class = "form-control estilo-input" } })
                @Html.ValidationMessageFor(model => model.Periodo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="botao-basico" value="Criar Classe" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
