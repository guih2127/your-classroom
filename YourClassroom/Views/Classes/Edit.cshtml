                @Html.DropDownListFor(model => Model.Curso_Id, new SelectList(ViewBag.Cursos, "Id", "Nome"), htmlAttributes: new { @class = "form-control", id = "Curso" })
                @Html.ValidationMessageFor(model => model.Curso_Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Periodo, htmlAttributes: new { @class = "control-label col-md-2" })
